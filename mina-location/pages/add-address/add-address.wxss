/* pages/add-address/add-address.wxss */

page{
  width: 100%;
  background-color: #efefef;
  padding-bottom: 150rpx;
}

.container{
  width: 100%;
}

.container .row{
  width: 100%;
  height: 100rpx;
  background-color: white;
  margin-top: 10rpx;
  display: flex;
  padding: 10rpx;
}

.container .row .location{
  width: 80%;
  height: 100%;
  text-align: center;
  padding-top: 3%;
}

.container .row .arrow{
    width: 20%;
    height: 100%;
    font-size:70rpx;
    color:gray;
    border-left: 2rpx solid gray;
}
.container .row .arrow text{
  margin-left: 50rpx;
}

.my-location{
  display: flex;
  margin: 5rpx 0rpx;
  padding: 5rpx 30rpx;
  background-color: white;  
}

.my-location .left{
  width: 80%;
  padding: 10rpx;
  overflow-x: hidden;
}

.my-location .right{
  display: flex;
  width: 20%;
  justify-content: center;
  align-items: center;
}

.my-location .left .title{
  font-size: 35rpx;
  color: black;
}

.my-location .left .address{
  font-size: 28rpx;
  margin-top: 10rpx;
}